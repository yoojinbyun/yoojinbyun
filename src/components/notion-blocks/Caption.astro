---
import type { HTMLTag } from "astro/types";
import * as interfaces from "../../lib/interfaces.ts";
import RichTextB from "./RichText.astro";

export interface Props {
	richTexts: interfaces.RichText[];
	block?: interfaces.Block;
	as?: HTMLTag;
}

const { richTexts, block, as: Tag = "div" } = Astro.props;
---

{
	(
		<Tag class="caption min-w-0 pt-1 text-sm text-textColor/70">
			{richTexts.map((richText: interfaces.RichText) => (
				<RichTextB richText={richText} blockID={block.Id} />
			))}
		</Tag>
	)
}
